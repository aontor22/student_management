<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!-- Action -->
  <record id="action_course" model="ir.actions.act_window">
    <field name="name">Courses</field>
    <field name="res_model">student.course</field>
    <field name="view_mode">list,form</field>
  </record>

<!-- List View -->
  <record id="view_course_list" model="ir.ui.view">
    <field name="name">student.course.list</field>
    <field name="model">student.course</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="code"/>
        <field name="credit"/>
        <field name="enrolled_student_count" string="Students" widget="statinfo"/>
      </list>
    </field>
  </record>

<!-- Form View -->
  <record id="view_course_form" model="ir.ui.view">
    <field name="name">student.course.form</field>
    <field name="model">student.course</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_show_enrolled_students"
                  type="object"
                  class="oe_highlight"
                  string="Show Enrolled Students"/>
          <!-- attrs removed; use inline invisible -->
          <button class="oe_stat_button"
                  type="object"
                  name="action_show_enrolled_students"
                  invisible="enrolled_student_count == 0">
            <field name="enrolled_student_count" widget="statinfo" string="Students"/>
          </button>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="code"/>
            </group>
            <group>
              <field name="credit"/>
            </group>
          </group>
          <notebook>
            <page string="Students">
              <field name="student_ids" widget="many2many_tags"/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
